{
  "version": 2,
  "builds": [
    { "src": "api:*.php", "use": "@vercel/php" },
    { "src": "assets:*.js", "use": "@vercel/static" },
    { "src": "assets:*.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": ":assets/(.*)", "dest": "/assets/$1" },
    { "src": ":projects/(.*)", "dest": "/projects/$1" },
    { "src": ":api/(.*)", "dest": "/api/$1" },
    { "src": ":", "dest": "/api/index.php" }
  ]
}
